@model EIP.Entity.RepaymentPlan

@{
    Layout = null;
}
@section head{
}
<form id="form_RepaymentPlan" class="easyui-form" method="post" data-options="">
        
            <!--合同基本信息标识-->
            @Html.HiddenFor(p => p.RepaymentPlantGUID)    
        
            <!--合同基本信息标识-->
            @Html.HiddenFor(p => p.ContractGUID)    

        
            <div class="form-item">
                    @Html.CLDatetimeBoxFor(p => p.RepaymentPlanDate, new DatetimeBox() { Label = "回款计划时间 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.RepaymentPlanAmount, new TextBox() { Label = "回款计划金额 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Remarks, new TextBox() { Label = "备注 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Other, new TextBox() { Label = "冗余字段 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.ContractBasicInfo, new TextBox() { Label = "记录项目的一些基本信息 ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_RepaymentPlan").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_RepaymentPlan").form("getData");
        App.action(App.getUrl("/RepaymentPlan/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
